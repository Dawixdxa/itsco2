<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Bienvenido al juego del ITSCO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:gravity="center" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="80.0dp"
        android:id="@+id/linearLayout1">
        <TextView
            android:text="Juego de preguntas"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:gravity="center"
            android:layout_marginTop="15.0dp" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="139.0dp"
        android:id="@+id/linearLayout2"
        android:gravity="center">
        <ImageView
            android:layout_width="156.5dp"
            android:layout_height="match_parent"
            android:id="@+id/imageView1"
            android:background="@drawable/preguntas" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout3"
        android:layout_marginRight="23.0dp"
        android:layout_marginLeft="29.0dp"
        android:layout_marginTop="16.0dp">
        <Button
            android:text="Nivel 1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnN1"
            android:layout_marginTop="38.0dp" />
        <Button
            android:text="Nivel 2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnN2"
            android:layout_marginTop="17.0dp" />
        <Button
            android:text="Nivel 3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnN3"
            android:layout_marginTop="17.0dp" />
        <Button
            android:text="Nivel 4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnN4"
            android:layout_marginTop="17.0dp" />
        <Button
            android:text="Nivel 5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnN5"
            android:layout_marginTop="17.0dp" />

    </LinearLayout>




</LinearLayout>
