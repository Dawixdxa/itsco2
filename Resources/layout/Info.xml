<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minWidth="25px"
        android:minHeight="25px">

        <TextView
            android:text="Instituto Cordillera"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textView1"
            android:textColor="@android:color/black"
            android:layout_gravity="top"
            android:foregroundGravity="clip_horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="22.5dp" />


        <TextView
            android:text="Misión"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_marginTop="29.0dp"
            android:layout_marginLeft="26.0dp"
            android:layout_marginRight="29.5dp" />
        <TextView
            android:text="Construimos de forma eficiente e innovadora una institución auténtica positiva que integra en su Modelo Educativo: emociones, valores y desempeños, comprometidos con la formación de profesionales íntegros y competentes, responsables con su entorno y con la sociedad."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="79.5dp"
            android:id="@+id/textView3"
            android:layout_marginTop="28.0dp"
            android:layout_marginLeft="29.5dp"
            android:layout_marginRight="29.5dp" />
        <TextView
            android:text="Vision"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textColor="@android:color/black"
            android:layout_marginTop="24.5dp"
            android:layout_marginLeft="29.5dp"
            android:layout_marginRight="29.0dp" />
        <TextView
            android:text="Ser un Instituto Superior Universitario líder y referente en educación superior en el Ecuador que destaca por su saber ser y hacer, guiado por los principios de excelencia, innovación, inclusión, responsabilidad educativa y social, generando impacto positivo en la sociedad."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@android:color/black"
            android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.5dp" />
        <TextView
            android:text="Valores"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="76.0dp"
            android:id="@+id/textView6"
            android:layout_marginTop="22.5dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp" />
        <TextView
            android:text="RESPETO: Aceptar las diferencias individuales y grupales sin querer imponer nuestra opinión como la única válida."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="INTEGRIDAD: Cumplir con lo que decimos que vamos hacer obrando con sinceridad, transparencia y calidad humana.t"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/background_dark" />
        <TextView
            android:text="SERVICIO: Satisfacer las necesidades de los demás sin esperar una recompensa a cambio y dentro del tiempo establecido."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="TRABAJO EN EQUIPO: Planificar y desarrollar soluciones con el resto de compañeros de la organización que garanticen el cumplimiento de objetivos comunes."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="EFICIENCIA: Hacer bien las cosas a la primera."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView11" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="INNOVACIÓN: Generar de forma creativa propuesta de mejora para la gestión académica, organizacional y tecnológica que conduzcan al crecimiento y desarrollo institucional."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="SOLIDARIDAD: Entender las necesidades y los problemas de los demás facilitando la ayuda para solucionarlos."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView13" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="LEALTAD: Reconocer y cumplir el compromiso que mantenemos con las personas, la comunidad y la institución."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="EQUIDAD: Dar un trato justo sin discriminación de género, raza, religión, ideología, orientación sexual, condición socioeconómica y capacidades especiales."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView15" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />
        <TextView
            android:text="AMOR: Es el compromiso ético de brindar ayuda a los que nos rodean con el objetivo de potenciar su desarrollo profesional, a través de una autentica preocupación por el otro. Siempre se tiene presente que los demás realmente nos importan."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView16" 
             android:layout_marginLeft="29.0dp"
            android:layout_marginRight="29.0dp"
            android:layout_marginTop="21.5dp"
            android:textColor="@android:color/black" />




    </LinearLayout>
</ScrollView>
