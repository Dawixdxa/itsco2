<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1"
    android:background="@android:color/background_light"
    android:gravity="center">
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="198.0dp"
        android:id="@+id/linearLayout2"
        android:gravity="center">
        <ImageView
            android:layout_width="210.5dp"
            android:layout_height="132.0dp"
            android:id="@+id/imageView1"
            android:foregroundGravity="center"
            android:background="@drawable/cordi" />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="108.0dp"
        android:id="@+id/linearLayout3"
        android:gravity="center_vertical|center"
        android:foregroundGravity="center_horizontal|center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:background="@drawable/carrera" />
        
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="99.5dp"
        android:id="@+id/linearLayout4"
        android:gravity="center_vertical|center_horizontal|center"
        android:foregroundGravity="center_vertical|center_horizontal|center">
        <Button
            android:text="Iniciar Juego"
            android:layout_width="133.5dp"
            android:layout_height="63.5dp"
            android:id="@+id/btnJuego"
            android:gravity="center_vertical"
            android:foregroundGravity="center"
            android:layout_marginBottom="32.0dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="99.5dp"
        android:id="@+id/linearLayout5"
        android:gravity="center_vertical|center_horizontal|center"
        android:foregroundGravity="center_vertical|center_horizontal|center">
        <Button
            android:text="Informacion del ITSCO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/btnInfo"
            android:layout_marginTop="32.0dp" />
    </LinearLayout>
</LinearLayout>